<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database Sync"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/gray_900"
        android:layout_marginBottom="24dp" />

    <!-- Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading status..."
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="16dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/syncProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:indeterminate="false"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textAlignment="center" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Sync Result Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Results"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/syncResultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:spacing="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/syncButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sync Offline Hikes"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/primary"
            android:enabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkStatusButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Refresh Status"
            android:textSize="16sp"
            android:layout_margin="8dp"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="@color/primary" />

    </LinearLayout>

    <!-- Cloud-to-Offline Sync Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download Hikes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/gray_900"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- Download Status Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/downloadStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ready to download public hikes"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="16dp" />

            <!-- Download Progress Bar -->
            <ProgressBar
                android:id="@+id/downloadProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:indeterminate="false"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/downloadProgressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:textAlignment="center" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Download Result Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Results"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/downloadResultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="@color/gray_700"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Download Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/downloadButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Download Hikes from Cloud"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/secondary" />

    <!-- Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:background="@drawable/chip_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Sync"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offline hikes are stored locally on your device. Use the sync feature to upload them to the cloud and make them available across devices."
            android:textSize="12sp"
            android:textColor="@color/gray_700"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>
