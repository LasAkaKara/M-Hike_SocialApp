{
  "info": {
    "_postman_id": "e6c4f0b4-8c92-4de3-9f34-123456789abc",
    "name": "M-Hike Backend API (With Automated Tests)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_hiker\",\n  \"password\": \"SecurePassword123\",\n  \"region\": \"California\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "signup"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 201\", function () {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"Has token\", function () {",
                  "  var json = pm.response.json();",
                  "  pm.expect(json.token).to.exist;",
                  "  pm.collectionVariables.set(\"token\", json.token);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Sign In",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_hiker\",\n  \"password\": \"SecurePassword123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/signin",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "signin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "var json = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", json.token);"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/auth/me",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "me"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"User object returned\", function () {",
                  "  pm.response.to.have.status(200);",
                  "  var json = pm.response.json();",
                  "  pm.expect(json.id).to.exist;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },

